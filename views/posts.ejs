<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('includes/head.ejs') %>
        <link rel="stylesheet" href="css/posts.css">
        <link rel="stylesheet" href="css/post-item.css">
</head>

<body>
    <%- include('includes/nav.ejs') %>
        <section id="posts">
            <h1>All Posts</h1>

            <% if (!posts) { %>
                <p>No posts found - Maybe create one?</p>
                <a class="button" href="/new-post">Create New Post</a>
            <% } else { %>
                <ol id="posts-list">
                    <% for (const post of posts) { %>
                        <li>
                            <%- include('includes/post-item', { post: post }) %>
                        </li>
                    <% } %>
                </ol>
            <% } %>
        </section>
</body>

</html>