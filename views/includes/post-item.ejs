<article class="post-item">
    <h2>
        <%= post.title %>
    </h2>
    <p class="post-item-author"><i>By <%= post.author.name %></i></p>
    <p>
        <%= post.summary %>
    </p>
    <div class="post-actions">
        <form action="/posts/<%= post._id %>/delete" method="POST">
            <button class="button">
                Delete Post
            </button>
        </form>
        <a class="button" href="/posts/<%= post._id %>/edit">Edit Post</a>
        <a class="button" href="/posts/<%= post._id %>">View Post</a>
    </div>
</article>